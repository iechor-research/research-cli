{
  "name": "@iechor/research-cli",
  "version": "0.3.1",
  "description": "AI-powered research and development CLI tool for developers",
  "author": "IECHOR Research <research@iechor.com>",
  "engines": {
    "node": ">=20.0.0"
  },
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "private": "true",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iechor-research/research-cli.git"
  },
  "config": {
    "sandboxImageUri": "us-docker.pkg.dev/research-code-dev/research-cli/sandbox:0.2.0"
  },
  "scripts": {
    "start": "node scripts/start.js",
    "debug": "cross-env DEBUG=1 node --inspect-brk scripts/start.js",
    "auth:npm": "npx iechor-artifactregistry-auth",
    "auth:docker": "gcloud auth configure-docker us-west1-docker.pkg.dev",
    "auth": "npm run auth:npm && npm run auth:docker",
    "generate": "node scripts/generate-git-commit-info.js",
    "build": "node scripts/build.js",
    "build:all": "npm run build && npm run build:sandbox",
    "build:packages": "npm run build --workspaces",
    "build:sandbox": "node scripts/build_sandbox.js --skip-npm-install-build",
    "build:native": "node scripts/build-native-wrapper.js",
    "build:cross-platform": "node scripts/build-cross-platform.js",
    "build:electron-packages": "node scripts/build-electron-packages.js",
    "build:all-platforms": "node scripts/build-all-platforms.js",
    "build:iechor-style": "node scripts/build-iechor-style.js",
    "build:windows-fix": "node scripts/build-windows-fix.js",
    "build:simple": "node scripts/build-simple.js",
    "fix-build": "node scripts/fix-build-issues.js",
    "build:correct": "node scripts/build-correct.js",
    "build:terminal": "node scripts/build-research-terminal.js",
    "generate:icons": "node scripts/generate-icons.js",
    "release:native": "node scripts/create-release.js",
    "publish:native": "node scripts/gh-release.js",
    "publish:cross-platform": "node scripts/gh-release-cross-platform.js",
    "prepare:release": "node scripts/publish-available-platforms.js",
    "github:build": "node scripts/trigger-github-build.js",
    "release:local": "node scripts/create-local-release.js",
    "bundle": "npm run generate && node esbuild.config.js && node scripts/copy_bundle_assets.js",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "tauri:build:debug": "tauri build --debug",
    "web:dev": "cd packages/web && npm run dev",
    "web:build": "cd packages/web && npm run build",
    "web:start": "cd packages/web && npm run start",
    "web:install": "cd packages/web && npm install",
    "test": "npm run test --workspaces",
    "test:ci": "npm run test:ci --workspaces --if-present && npm run test:scripts",
    "test:scripts": "vitest run --config ./scripts/tests/vitest.config.ts",
    "test:e2e": "npm run test:integration:sandbox:none -- --verbose --keep-output",
    "test:integration:all": "npm run test:integration:sandbox:none && npm run test:integration:sandbox:docker && npm run test:integration:sandbox:podman",
    "test:integration:sandbox:none": "RESEARCH_SANDBOX=false node integration-tests/run-tests.js",
    "test:integration:sandbox:docker": "RESEARCH_SANDBOX=docker node integration-tests/run-tests.js",
    "test:integration:sandbox:podman": "RESEARCH_SANDBOX=podman node integration-tests/run-tests.js",
    "lint": "eslint . --ext .ts,.tsx && eslint integration-tests",
    "lint:fix": "eslint . --fix && eslint integration-tests --fix",
    "lint:ci": "eslint . --ext .ts,.tsx --max-warnings 0 && eslint integration-tests --max-warnings 0",
    "format": "prettier --write .",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "preflight": "npm run clean && npm ci && npm run format && npm run lint:ci && npm run build && npm run typecheck && npm run test:ci",
    "prepare": "npm run bundle",
    "prepare:package": "node scripts/prepare-package.js",
    "release:version": "node scripts/version.js",
    "telemetry": "node scripts/telemetry.js",
    "clean": "node scripts/clean.js",
    "build:electron-safe": "node scripts/build-iechor-style.js --electron-only",
    "build:standalone": "node scripts/build-standalone-package.js",
    "build:standalone-simple": "node scripts/build-simple-standalone-package.js",
    "build:cross-platform": "node scripts/build-cross-platform-packages.js",
    "release": "node scripts/release.js",
    "release:patch": "node scripts/release.js patch",
    "release:minor": "node scripts/release.js minor",
    "release:major": "node scripts/release.js major",
    "test:cross-platform": "node scripts/test-cross-platform-build.js",
    "gh:release": "node scripts/create-github-release.js",
    "gh:release-draft": "node scripts/create-github-release.js --draft"
  },
  "bin": {
    "research": "bundle/research.js"
  },
  "files": [
    "bundle/",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@tauri-apps/api": "^2.6.0",
    "@tauri-apps/cli": "^2.6.2",
    "@types/micromatch": "^4.0.9",
    "@types/mime-types": "^3.0.1",
    "@types/minimatch": "^5.1.2",
    "@types/shell-quote": "^1.7.5",
    "@vitest/coverage-v8": "^3.1.1",
    "concurrently": "^9.2.0",
    "cross-env": "^7.0.3",
    "electron": "^37.2.5",
    "esbuild": "^0.25.0",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-license-header": "^0.8.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "glob": "^10.4.5",
    "globals": "^16.0.0",
    "json": "^11.0.0",
    "lodash": "^4.17.21",
    "memfs": "^4.17.2",
    "prettier": "^3.5.3",
    "react-devtools-core": "^4.28.5",
    "typescript-eslint": "^8.30.1",
    "vitest": "^3.1.1",
    "yargs": "^17.7.2"
  },
  "dependencies": {
    "@testing-library/dom": "^10.4.0",
    "gcp-metadata": "^7.0.1",
    "google-auth-library": "^10.1.0",
    "google-logging-utils": "^1.1.1",
    "llm-interface": "^2.0.1495",
    "ws": "^8.18.3",
    "zod": "^3.25.76",
    "zod-to-json-schema": "^3.24.6"
  }
}
